				{
					"name": "Submit Form",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"data\": {\n    \"1\": \"John Doe\",\n    \"2\": \"john.doe@example.com\",\n    \"3\": \"This is my message content.\"\n  },\n  \"user_id\": null\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/forms/1/submit",
							"host": ["{{base_url}}"],
							"path": ["api", "forms", "1", "submit"]
						},
						"description": "Note: The keys in the data object are field IDs, and values are the submitted values for those fields."
					}
				},
				{
					"name": "Query Submissions by Field Value",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"field_id\": 1,\n  \"value\": \"John\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/forms/1/submissions/query",
							"host": ["{{base_url}}"],
							"path": ["api", "forms", "1", "submissions", "query"]
						},
						"description": "Search submissions where field 1 contains 'John'"
					}
				},
				{
					"name": "Query Submissions by Multiple Fields",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"filters\": [\n    {\n      \"field_id\": 1,\n      \"value\": \"%John%\",\n      \"operator\": \"LIKE\"\n    },\n    {\n      \"field_id\": 2,\n      \"value\": \"%@example.com%\",\n      \"operator\": \"LIKE\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/forms/1/submissions/query",
							"host": ["{{base_url}}"],
							"path": ["api", "forms", "1", "submissions", "query"]
						},
						"description": "Search submissions with multiple field filters"
					}
				},
