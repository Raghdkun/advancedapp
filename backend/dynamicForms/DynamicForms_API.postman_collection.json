						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Survey Form\",\n  \"description\": \"Customer satisfaction survey\",\n  \"version\": 1,\n  \"is_active\": true,\n  \"fields\": [\n    {\n      \"label\": \"Your Name\",\n      \"field_type_id\": 1,\n      \"order\": 0,\n      \"is_required\": true\n    },\n    {\n      \"label\": \"Satisfaction Level\",\n      \"field_type_id\": 6,\n      \"order\": 1,\n      \"is_required\": true,\n      \"options\": [\n        {\n          \"value\": \"very_satisfied\",\n          \"label\": \"Very Satisfied\",\n          \"order\": 0\n        },\n        {\n          \"value\": \"satisfied\",\n          \"label\": \"Satisfied\",\n          \"order\": 1\n        },\n        {\n          \"value\": \"neutral\",\n          \"label\": \"Neutral\",\n          \"order\": 2\n        },\n        {\n          \"value\": \"dissatisfied\",\n          \"label\": \"Dissatisfied\",\n          \"order\": 3\n        }\n      ]\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/forms",
							"host": ["{{base_url}}"],
							"path": ["api", "forms"]
						}
